<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpactoonApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF5E00</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="bigFontOnImage" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="smallFontOnImage" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>