            <androidx.cardview.widget.CardView
                android:id="@+id/item10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/marginExtraSmall"
                android:layout_marginTop="@dimen/marginSmall"
                app:cardCornerRadius="@dimen/radiusSmall"
                app:layout_constraintDimensionRatio="1:1.125"
                app:layout_constraintEnd_toStartOf="@id/guideline_end"
                app:layout_constraintStart_toEndOf="@+id/guideline_center"
                app:layout_constraintTop_toBottomOf="@id/item8">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/naruto_shippuden"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kakashi" />

                <View
                    android:layout_width="match_parent"
