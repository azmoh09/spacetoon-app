                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/naruto" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/season_2" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
