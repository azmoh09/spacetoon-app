                    android:layout_height="@dimen/favoriteButtonSize" />

                <TextView
                    style="@style/seriesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/one_piece" />

                <TextView
                    style="@style/seriesSubTitle"
