            <androidx.cardview.widget.CardView
                android:id="@+id/item8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/marginExtraSmall"
                android:layout_marginTop="@dimen/marginSmall"
                app:cardCornerRadius="@dimen/radiusSmall"
                app:layout_constraintDimensionRatio="1:1.125"
                app:layout_constraintEnd_toStartOf="@id/guideline_end"
                app:layout_constraintStart_toEndOf="@+id/guideline_center"
                app:layout_constraintTop_toBottomOf="@id/item6">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/naruto"
                    android:scaleType="centerCrop"
                    android:src="@drawable/naruto" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/inner_gradient" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/loveButton"
                    android:layout_width="@dimen/favoriteButtonSize"
                    android:layout_height="@dimen/favoriteButtonSize" />

                <TextView
                    style="@style/seriesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/naruto" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/season_2" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/episode_10" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/item9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/marginSmall"
                android:layout_marginEnd="@dimen/marginExtraSmall"
                app:cardCornerRadius="@dimen/radiusSmall"
                app:layout_constraintDimensionRatio="1:1.125"
                app:layout_constraintEnd_toStartOf="@id/guideline_center"
                app:layout_constraintStart_toEndOf="@+id/guideline_begin"
                app:layout_constraintTop_toBottomOf="@id/item7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/dragon_ball_super"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dragon_ball" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/inner_gradient" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/loveButton"
                    android:layout_width="@dimen/favoriteButtonSize"
                    android:layout_height="@dimen/favoriteButtonSize" />

                <TextView
                    style="@style/seriesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dragon_ball_super" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/season_2" />

                <TextView
                    style="@style/seriesSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/episode_10" />
